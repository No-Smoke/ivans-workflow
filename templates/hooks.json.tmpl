{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/builder-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/metrics-logger.mjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": ".claude/hooks/verify-work.sh",
        "blocking": true
      },
      {
        "type": "command",
        "command": ".claude/hooks/prompt-handoff.sh",
        "blocking": false
      }
    ]
  }
}
