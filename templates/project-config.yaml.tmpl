# Ivan's Workflow — Project Configuration
# Generated by install.sh — customize for your project

project:
  name: "${PROJECT_NAME}"
  description: "${PROJECT_DESCRIPTION}"

stack:
  runtime: "${RUNTIME}"              # cloudflare-workers | node | deno | python
  framework: "${FRAMEWORK}"          # hono | express | nextjs | fastapi | none
  language: "${LANGUAGE}"            # typescript | javascript | python
  test_runner: "${TEST_RUNNER}"      # vitest | jest | pytest | none
  linter: "${LINTER}"               # eslint | biome | ruff | none
  formatter: "${FORMATTER}"          # prettier | biome | black | none
  deploy_command: "${DEPLOY_CMD}"    # e.g., "npx wrangler deploy"
  dev_command: "${DEV_CMD}"          # e.g., "npx wrangler dev" or "npm run dev"

schema:
  enabled: ${SCHEMA_ENABLED}        # true | false
  definitions: "${SCHEMA_DEFINITIONS}"       # e.g., "schema/definitions.json"
  generated_types: "${SCHEMA_GENERATED}"     # e.g., "generated/types.ts"
  generate_command: "${SCHEMA_GEN_CMD}"      # e.g., "npm run generate:types"
  config_file: "${SCHEMA_CONFIG}"            # e.g., "schema/config.json"

specs:
  enabled: ${SPECS_ENABLED}          # true | false
  directories: ${SPEC_DIRS}          # YAML list, e.g., ["specs/"]
  id_prefix: "${SPEC_PREFIX}"        # e.g., "EBATT", "PROJ", "FEAT"

paths:
  source: "${SOURCE_DIR}"            # e.g., "src"
  tests: "${TESTS_DIR}"             # e.g., "tests"
  handoffs: "${HANDOFFS_DIR}"       # e.g., "docs/agent-comms"

agents:
  count: ${AGENT_COUNT}              # 4, 5, or 6
  builder_mode: "${BUILDER_MODE}"    # auto-accept | interactive
  planner_mode: "plan"               # plan | interactive

quality:
  typecheck_command: "${TYPECHECK_CMD}"  # e.g., "npm run typecheck" or ""
  test_command: "${TEST_CMD}"            # e.g., "npm test"
  lint_command: "${LINT_CMD}"            # e.g., "npm run lint"
  coverage_threshold: ${COVERAGE_THRESHOLD}  # e.g., 80

credentials:
  ${CREDENTIALS_YAML}
